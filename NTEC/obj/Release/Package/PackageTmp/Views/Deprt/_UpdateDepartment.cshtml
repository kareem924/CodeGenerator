@model NTEC.Models.DepartmentsModel
@{

    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">@(global::Resources.Resource.UpdateDepartments)</h4>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("UpdateDepartment", "Deprt", FormMethod.Post, new { @class = "form-horizontal" }))
{
   
    <div class="modal-body">
        @Html.Partial("_CreateOrUpdate", Model)
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">@(global::Resources.Resource.Cancel)</button>
        <input class="btn btn-primary" type="submit" value="@(global::Resources.Resource.Save)" />
    </div>
}