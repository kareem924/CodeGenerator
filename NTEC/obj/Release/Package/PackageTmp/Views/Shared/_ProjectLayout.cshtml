<script type="text/javascript">
    $(function() {

        if ('@NTEC.Classes.Security.SessionManager.LanguageId' === '2') {

            $('#btnLang').html('<span>English</span>');

        } else if ('@NTEC.Classes.Security.SessionManager.LanguageId' === '1') {
            $('#btnLang').html('<span >العربية</span>');
        }

    });

    $('#btnArabic').click(function() {
        if ('@NTEC.Classes.Security.SessionManager.LanguageId' === '1') {
            alert("هذه هي اللغة الرسمية للبرنامج ");
            return false;
        }
    
        setLanguage(1);


        return false;
    });

    $('#btnEnglish').click(function() {
        if ('@NTEC.Classes.Security.SessionManager.LanguageId' === '2') {
            alert("this is your current langauge");
            return false;
        }

        //alert(window.CORRLanguageId);
    
        setLanguage(2);


        return false;
    });

    function setLanguage(langId) {

        //=============== Setting Language ============
        $.ajaxSetup({ cache: false });
        var link = '@Url.Action("SetInsideCulture", "Login", new {landId = "-1"})';
        link = link.replace("-1", langId);
        $.ajax({
            url: link,
            type: "GET",
            data: $(this).serialize(),
            success: function(result) {
                if (result.success === true) {
                    location.reload();
                } else {
                    alert("this is your current langauge");
                }
            }
        });
    }
</script>
